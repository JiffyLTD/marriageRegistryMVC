@model SubdKurshach.ViewModel.RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
}
<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Форма регистрации </h3>
                        <form asp-controller="Account" asp-action="Register" method="post">

                            <div class="row">
                                <div class="col-md-6 mb-4 d-flex align-items-center">   
                                    <div class="form-outline datepicker" style="width:500px">
                                        <input asp-for="LastName" type="text" class="form-control form-control-lg" />
                                        <label class="form-label">Фамилия</label>
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                  
                                        <input asp-for="FirstName" type="text" class="form-control form-control-lg" />
                                        <label class="form-label">Имя</label>
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    
                                        <input asp-for="Patronymic" type="text" class="form-control form-control-lg" />
                                        <label class="form-label">Отчество</label>
                                        <span asp-validation-for="Patronymic" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <h6 class="mb-2 pb-1">Пол: </h6>
                                    <div class="form-check form-check-inline">
                                        <input asp-for="Gender" class="form-check-input" type="radio" checked value="Female"/>
                                        <label class="form-check-label" for="femaleGender">Ж</label>
                                        <span asp-validation-for="Gender" class="text-danger"></span>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input asp-for="Gender" class="form-check-input" type="radio" value="Male"/>
                                        <label class="form-check-label" for="maleGender">М</label>
                                        <span asp-validation-for="Gender" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline datepicker w-100 mt-4">
                                        <input asp-for="PhoneNum" type="text" class="form-control form-control-lg" />
                                        <label class="form-label">Номер телефона</label>
                                        <span asp-validation-for="PhoneNum" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline datepicker w-100">
                                        <input asp-for="ProfilePhoto" type="text" class="form-control form-control-lg" />
                                        <label class="form-label">URL- фото профиля</label>
                                        <span asp-validation-for="ProfilePhoto" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>                    

                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        <input asp-for="Email" type="email" id="emailAddress" class="form-control form-control-lg" />
                                        <label class="form-label" for="emailAddress">Email</label>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        <input asp-for="Password" type="password" class="form-control form-control-lg" />
                                        <label class="form-label">Пароль</label>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>
                            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Паспортные данные</h3>
                            <div class="row">
                                <div class="col-md-6 mb-4 d-flex align-items-center">
                                    <div class="form-outline datepicker" style="width:500px">
                                        <input asp-for="PassportSeries" type="text" class="form-control form-control-lg" />
                                        <label class="form-label">Серия</label>
                                        <span asp-validation-for="PassportSeries" class="text-danger"></span>

                                        <input asp-for="PassportNum" type="text" class="form-control form-control-lg" />
                                        <label class="form-label">Номер</label>
                                        <span asp-validation-for="PassportNum" class="text-danger"></span>


                                        <input asp-for="PassportDate" type="date" class="form-control form-control-lg" />
                                        <label class="form-label">Дата выдачи</label>
                                        <span asp-validation-for="PassportDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline datepicker w-100">
                                        <input asp-for="Birthday" type="date" class="form-control form-control-lg" />
                                        <label class="form-label">Дата рождения</label>
                                        <span asp-validation-for="Birthday" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                  <div class="form-outline datepicker">
                                    <input asp-for="PassportIssuedByWhom" type="text" class="form-control form-control-lg" />
                                        <label class="form-label">Кем выдан</label>
                                    <span asp-validation-for="PassportIssuedByWhom" class="text-danger"></span>
                                    </div>
                            </div>
                            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Место жительства</h3>
                            <div class="row">
                                <div class="col-md-6 mb-4 d-flex align-items-center">
                                    <div class="form-outline datepicker" style="width:500px">
                                        <input asp-for="Country" type="text" class="form-control form-control-lg" />
                                        <label class="form-label">Страна</label>
                                        <span asp-validation-for="Country" class="text-danger"></span>

                                        <input asp-for="City" type="text" class="form-control form-control-lg" />
                                        <label class="form-label">Город</label>
                                        <span asp-validation-for="City" class="text-danger"></span>


                                        <input asp-for="Street" type="text" class="form-control form-control-lg" />
                                        <label class="form-label">Улица</label>
                                        <span asp-validation-for="Street" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline datepicker w-100">
                                        <input asp-for="HouseNum" type="text" class="form-control form-control-lg" />
                                        <label class="form-label">Дом</label>
                                        <span asp-validation-for="HouseNum" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline datepicker w-100">
                                        <input asp-for="AppartNum" type="text" class="form-control form-control-lg" />
                                        <label class="form-label">Квартира</label>
                                        <span asp-validation-for="AppartNum" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <span class="text-danger">@Html.ValidationMessage("RegisterError")</span>
                            <div class="mt-4 pt-2">
                                <input class="btn btn-primary btn-lg" type="submit" value="Регистрация" />
                                <input asp-for="isUser" type="hidden" value="true"/>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>