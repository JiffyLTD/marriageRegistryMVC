@model SubdKurshach.ViewModel.FamilyListViewModel
@{
    ViewData["Title"] = "Развод";
}

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row h-100">
            <div class="col-sm">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Заключить договор о разводе</h3>

                        <form asp-controller="Divorce" asp-action="NewDivorce" method="post">
                            <div class="col-sm">
                                <select asp-for="FamilyId" class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                                    if(@Model.Families.Count() > 0)
                                    {
                                        @foreach (var family in Model.Families)
                                        {
                                        <option value="@family.FamilyId">@family.Marriage.Husband.User.LastName @family.Marriage.Husband.User.FirstName
                                            и @family.Marriage.Wife.User.LastName @family.Marriage.Wife.User.FirstName
                                        </option>
                                        }
                                    }
                                </select>
                                <label class="form-label">Брак</label>
                                <div class="mt-4 pt-2">
                                    <input class="btn btn-primary btn-lg w-100" type="submit" value="Составить договор развода" />
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>